<Page
    x:Class="Microsoft.PlayerFramework.Win10.Sample.XAML.Pages.TTML"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.PlayerFramework.Win10.Sample.XAML.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pf="using:Microsoft.PlayerFramework"
    xmlns:pfttml="using:Microsoft.PlayerFramework.TimedText"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <pf:MediaPlayer x:Name="player" Source="http://smf.blob.core.windows.net/samples/videos/RealPCPride.mp4" IsCaptionSelectionVisible="True">
            <pf:MediaPlayer.AvailableCaptions>
                <pf:Caption Description="English" Source="http://smf.blob.core.windows.net/samples/win8/captions/RealPCPride.en.captions.xml"/>
                <pf:Caption Description="Spanish" Source="http://smf.blob.core.windows.net/samples/win8/captions/RealPCPride.es.captions.xml"/>
            </pf:MediaPlayer.AvailableCaptions>
            <pf:MediaPlayer.Plugins>
                <pfttml:CaptionsPlugin/>
            </pf:MediaPlayer.Plugins>
        </pf:MediaPlayer>
    </Grid>
    <Page.TopAppBar>
        <AppBar>
            <AppBarButton x:Name="BackButton" Icon="Back" Click="BackButton_Click"/>
        </AppBar>
    </Page.TopAppBar>
</Page>
